
<div class="panel panel-default">
  <div class="panel-heading">Listing pins</div>
  <div class="panel-body">

    <table class="table table-hover table-condensed">
      <thead>
        <tr>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @pins.each do |pin| %>
          <tr>
            <td><%= pin.description %></td>
            <td><%= link_to 'Show', pin, class: "btn btn-primary" %></td>
            <% if pin.user == current_user %>
              <td><%= link_to 'Edit', edit_pin_path(pin), class: "btn btn-primary" %></td>
              <td><%= link_to 'Destroy', pin, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'New Pin', new_pin_path, class: "btn btn-primary" %>
  </div>
  <div class="panel-footer"><%= link_to "Main page", root_path%></div>
</div>