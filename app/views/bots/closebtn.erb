<div class="panel panel-default">
  <div class="panel-heading">Close button</div>
  <div class="panel-body">

    <%= form_for @bot, :url => closebtnupdate_bot_path do |f| %>
    <div class="panel-body">
      <div class="form-group">
        <%= f.label :close_x, 'Close button coord X' %><br>
        <%= f.number_field :close_x %>
      </div>
      <div class="form-group">
        <%= f.label :close_y, 'Close button coord Y' %><br>
        <%= f.number_field :close_y %>
      </div>
      <div class="actions">
        <%= f.submit "Update Close button", class: "btn btn-primary" %>
      </div>
    </div>
  </div>
  <div class="panel-footer"><%= link_to "Back", configuration_bot_path %></div>
</div>

<% if @bot.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bot.errors.count, "error") %> prohibited this bot from being saved:</h2>

      <ul>
      <% @bot.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<% end %>