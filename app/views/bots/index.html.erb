<div class="panel panel-default">
  <div class="panel-heading">Listing bots</div>
  <div class="panel-body">

    <table class="table table-hover table-condensed">
      <thead>
        <tr>
          <th>Name</th>
          <th colspan="5"></th>
        </tr>
      </thead>

      <tbody>
        <% @bots.each do |bot| %>
          <tr>
            <td><%= bot.name %></td>
            <td><%= link_to 'Show', bot, class: "btn btn-primary" %></td>
            <td><%= link_to 'Edit', edit_bot_path(bot), class: "btn btn-primary" %></td>
            <td><%= link_to 'Destroy', bot, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %></td>
            <td><%= link_to 'Buildings', bot_buildings_path(bot), class: "btn btn-primary" %></td>
            <td><%=  link_to 'Download', download_bot_path(bot), class: "btn btn-primary", target: '_blank' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'New Bot', new_bot_path, class: "btn btn-primary" %>
  </div>
  <div class="panel-footer"><%= link_to "Main page", root_path %></div>
</div>