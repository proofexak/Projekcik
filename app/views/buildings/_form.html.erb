<%= form_for [@bot, @building] do |f| %>
<div class="panel-body">
  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="form-group">
    <%= f.label :type %><br>
    <%= f.select :type, [["Production", 'production'], ["Residential", 'residential']], {prompt: "Please select"}, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :coordinate_x %><br>
    <%= f.number_field :coordinate_x %>
  </div>
  <div class="form-group">
    <%= f.label :coordinate_y %><br>
    <%= f.number_field :coordinate_y %>
  </div>
  <div class="actions">
    <%= f.submit @building.persisted? ? "Update building" : "Create building", class: "btn btn-primary" %>
  </div>
</div>

<% if @building.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@building.errors.count, "error") %> prohibited this building from being saved:</h2>
      <ul>
      <% @building.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<% end %>
