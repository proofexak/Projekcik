<div class="panel panel-default">
  <div class="panel-heading">Probability</div>
  <div class="panel-body">

    <table class="table table-hover table-condensed">
      <thead>
        <tr>
          <th>Name</th>
          <th>Quantity</th>
          <th>Probability</th>
          <th colspan="2"></th>
        </tr>
      </thead>

      <tbody>
        <% ["Gold", "Supply", "Raw materials", "Medals",
         "Develompent points", "Diamonds"].each do |name| %>
          <tr>
            <td><%= name %></td>
            <td><%= which_quantity(name, @probability) %></td>
            <td><%= ((which_quantity(name, @probability) / total(@probability).to_f) * 100).round(2) %>%</td>
            <td><%= link_to '+', add_quant_probabilities_path(name: name), class: "btn btn-primary" %></td>
            <td><%= link_to '-', subtract_quant_probabilities_path(name: name), class: "btn btn-primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    Total: <%= total(@probability) %>
  </div>
  <div class="panel-footer">
    <%= link_to "Main page", root_path %> |
    <%= link_to "Bots", bots_path %>
  </div>

  <%= @chart.render() %>
</div>
