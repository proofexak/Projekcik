<%= form_for [@bot, @config], :url => bot_configuration_path(@config.bot, @config, params[:form]) do |f| %>
  <div class="panel-body">
    <div class="form-group">
      <%= f.label :fivemin_x, 'Five minutes button coord X' %><br>
      <%= f.number_field :fivemin_x %>
    </div>
    <div class="form-group">
      <%= f.label :fivemin_y, 'Five minutes button coord Y' %><br>
      <%= f.number_field :fivemin_y %>
    </div>
    <div class="actions">
      <%= f.submit "Update Five Minutes button", class: "btn btn-primary" %>
    </div>
  </div>

  <% if @bot.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@bot.errors.count, "error") %> prohibited this bot from being saved:</h2>

      <ul>
      <% @bot.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<% end %>